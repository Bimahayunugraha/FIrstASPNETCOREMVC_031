@using Rental_Kendaraan.Helper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rental_Kendaraan</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark fixed-top border-bottom shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-tools"></i> &nbsp; Rental_Kendaraan</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item @Url.MakeActive("Home")">
                            <a class="nav-link" asp-action="Index" asp-controller="Home" asp-area="admin">Home <span class='sr-only'>(current)</span></a>
                        </li>
                        <li class="nav-item @Url.MakeActive("Privacy")">
                            <a class="nav-link" asp-action="Index" asp-controller="Privacy" asp-area="admin">Privacy</a>
                        </li>
                        <li class="nav-item @Url.MakeActive("About")">
                            <a class="nav-link" asp-action="Index" asp-controller="About" asp-area="admin">About</a>
                        </li>
                        <li class="nav-item @Url.MakeActive("Contact")">
                            <a class="nav-link" asp-action="Index" asp-controller="Contact" asp-area="admin">Contact</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse justify-content-end">
                    <div class="row">
                        <div class="col-md-12">
                            <form class="d-flex input-group">
                              <input type="text" class="form-control me-2" placeholder="Search..." aria-label="Recipient's username" aria-describedby="button-addon2">
                              <button class="btn btn-outline-secondary" type="button" id="button-addon2"><i class="bi bi-search"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <div class="container-fluid footer">
      <footer class="d-flex flex-wrap justify-content-between align-items-center py-auto my-auto border-top">
        <ul class="bottom-footer nav col-md-4">
          <li class="nav-item text-underline-hover"><a asp-controller="Home" asp-action="Index" class="nav-link px-2 text-muted">Home</a></li>
          <li class="nav-item text-underline-hover"><a asp-controller="Privacy" asp-action="Index" class="nav-link px-2 text-muted">Privacy</a></li>
          <li class="nav-item text-underline-hover"><a asp-controller="About" asp-action="Index" class="nav-link px-2 text-muted">About</a></li>
          <li class="nav-item text-underline-hover"><a asp-controller="Contact" asp-action="Index" class="nav-link px-2 text-muted">Contact</a></li>
        </ul>

        <p class="copyright col-md-4 mb-0 text-muted"><i class="bi bi-tools icon__copy"></i>  &nbsp; &nbsp; &copy; 2021 - Rental_Kendaraan</p>

      </footer>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
